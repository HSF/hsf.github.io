{
  "ignorePatterns": [
    {
      "pattern": "/assets/CWP-Charge-HSF.pdf"
    },
    {
        "pattern": "mailto:.*"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "^/(.*)",
      "replacement": "https://hepsoftwarefoundation.org/$1"
    },
    {
      "pattern": "^\\s*{{\\s*site.baseurl\\s*}}\\s*/(.*)",
      "replacement": "https://hepsoftwarefoundation.org/$1"
    }
  ],
  "timeout": "20s",
  "retryOn429": true,
  "retryCount": 5,
  "fallbackRetryDelay": "30s",
  "aliveStatusCodes": [200, 206]
}

